<h1> <%= @restaurant.name %> </h1>
  <h3> Adress: <%= @restaurant.address %> </h3>
  <h3> Phone number: <%= @restaurant.phone_number %> </h3>
  <h3> Category: <%= @restaurant.category %> </h3>

  <%= link_to "Review Restaurant", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>

<div>
  <h3> Reviews </h3>

  <% if @restaurant.reviews == nil %>
   <p>No reviews yet</p>
  <% else %>
   <% @restaurant.reviews.each do |review| %>
    <li>
      Rating: <%= review.rating %>
      Comment: <%= review.content %>
    </li>
   <% end %>
  <% end %>

  <%= render 'reviews/form_review', restaurant: @restaurant %>

</div>




