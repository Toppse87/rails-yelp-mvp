<h1>Restaurants</h1>

<div class="container">
  <% @restaurants.each do |restaurant| %>
    <div class="card">
      <h2> <%= link_to restaurant.name, restaurant_path(restaurant) %> </h2>
      <p> Adress: <%= restaurant.address %> </p>
      <p> Phone number: <%= restaurant.phone_number %> </p>
      <p> Category: <%= restaurant.category %> </p>
    </div>
  <% end %>
</div>

